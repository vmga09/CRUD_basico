      <% if  (personal) { %> 
    <div class="container">
        <div class="row">
            <div class="col-lg-12 shadow-lg p-3 mb-5">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">Modificar personal</div>
                    <div class="card-body text-primary">
                        <form action="/modificarpersonal/<%= personal.id %>" method="POST">
                                <input id="id" name="id" value="<%= personal.id %>" hidden>
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Ingrese Nombre</label>
                                <input id="nombre" name="nombre" value="<%= personal.nombre %>" type="text" class="form-control" aria-describedby="emailHelp"> 
                            </div>
                            <div class="mb-3">
                                <label for="cargo" class="form-label">Ingrese Cargo</label>
                                <input id="cargo" name="cargo" value="<%= personal.cargo %>"type="text" class="form-control" > 
                            </div>
                            <div class="mb-3">
                                <label for="correo" class="form-label">Ingrese Correo</label>
                                <input id="correo" name="correo" value="<%= personal.correo %>" type="email" class="form-control" > 
                            </div>
                            <div>
                                <div class="card-footer bg-transparent border-primary">
                                    <a href="/" type="button" class="btn btn-secondary">Cancelar</a>
                                     <button type="submit" class="btn btn-primary" href="/" >Actualizar</button>
                                </div>
                            </div>
                        </form>
                    </div> 
                </div>
            </div>
        </div>
    </div>
   <% } %>
