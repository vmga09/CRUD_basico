  <body>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-12 shadow-lg p-3 mb-5">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">Registrar</div>
                    <div class="card-body text-primary">
                        <form action="/finduser" method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Ingrese username</label>
                                <input id="username" name="username" type="text" class="form-control" aria-describedby="emailHelp"> 
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Ingrese email</label>
                                <input id="email" name="email" type="email" class="form-control" > 
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Ingrese password</label>
                                <input id="password" name="password" type="password" autocomplete="current-password" class="form-control" > 
                            </div>
                            <div class="mb-3">
                                <label for="role_id" class="form-label">Ingrese Rol</label>
